

<div class='d-flex justify-content-center'>
  <div class = 'btn btn-danger m-4 float-center'>My Appointments</div>
</div>

<% @appointments.each do |appointment| %>
  <% doctor = User.where(id: appointment.doctor_id).first %>
  <div class="card m-4">
    <div class="card-body">
      <h5 class="card-title">Appointment: <%= appointment.query %></h5>
      <p class="card-text">Hospital Name: <%= doctor.hospital %></p>
      <p class="card-text">Doctor Name: <%= doctor.name %></p>
      <p class="card-text">Patient Name: <%= appointment.user.name %></p>
    </div>
  </div>
<% end %>