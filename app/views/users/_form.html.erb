


<%= form_for @user do |f| %>
  <div id="mynewpost" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Register</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="field">
            <%= f.label :name %>
            <%= f.text_area :name, class: "form-control task_title" %>
          </div>
          <div class="field">
            <%= f.label :phone %>
            <%= f.text_area :name, class:"form-control task_content"%>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-bs-dismiss="modal" id="mynewpostclose">Close</button>
          <%= submit_tag "Create", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>